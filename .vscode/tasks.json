{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm link",
            "type": "process",
            "command": "npm",
            "args": ["link"],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "${config:env.nodeDir}/bin:${env:PATH}"
                }
            }
        },
        {
            "label": "npm publish",
            "type": "process",
            "command": "npm",
            "args": ["publish"],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "${config:env.nodeDir}/bin:${env:PATH}"
                }
            }
        }
    ]
}
